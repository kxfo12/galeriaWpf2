<Window x:Class="karkowka_image.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:karkowka_image"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="10">Wybierz zdjęcie</TextBlock>
            <ComboBox Margin="10" x:Name="imageComboBox" SelectedIndex="0">
                <ComboBoxItem>carlotta</ComboBoxItem>
                <ComboBoxItem>changli</ComboBoxItem>
                <ComboBoxItem>rover</ComboBoxItem>
                <ComboBoxItem>yangyang</ComboBoxItem>
            </ComboBox>
            <Button Margin="10" Click="Button_Click">Pokaż</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Height="250" Width="200" x:Name="setImage" Source="carlotta.png"></Image>
            <TextBlock Margin="10">Wyświetlenia:</TextBlock>
            <TextBlock Margin="10" x:Name="counter">0</TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
